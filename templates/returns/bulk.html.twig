{% extends "main.html.twig" %}

{% block title %}{{ 'return.label'|trans }}{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('dashboard') }}">{{ 'dashboard.label'|trans }}</a></li>
        <li class="breadcrumb-item">{{ block('title') }}</li>
    </ol>
{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script src="{{ asset('build/checkout.js') }}"></script>
{% endblock %}

{% block content %}
    {{ form_start(form) }}

    <div class="card">
        <div class="card-header">{{ 'label.general'|trans }}</div>
        <div class="card-body">
            {{ form_widget(form) }}
        </div>
    </div>

    <div class="card">
        <div class="card-header">{{ 'checkout.preview.label'|trans }}</div>
        <div class="list-group list-group-flush" id="checkout_preview" data-select="#bulk_return_request_copies" data-url="{{ path('xhr_return') }}"></div>
    </div>

    <div class="buttons">
        <button type="submit" class="btn btn-sm btn-primary">
            <i class="fas fa-save"></i> {{ 'actions.save'|trans }}
        </button>

        <a href="javascript: history.back()" class="btn btn-sm btn-secondary">
            {{ 'actions.cancel'|trans }}
        </a>
    </div>

    {{ form_end(form) }}
{% endblock %}